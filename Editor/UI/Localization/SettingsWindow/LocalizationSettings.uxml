<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement name="CustomContent" class="custom-container">
        <ui:VisualElement name="DefaultLanguage" class="section">
            <ui:Label text="Default Language" name="DefaultLanguageLabel" class="subsection-header"/>
            <uie:EnumField name="DefaultLanguageField" class="language-field"/>
        </ui:VisualElement>
        <ui:VisualElement name="SheetExport" class="section">
            <ui:Label text="Sheet Export" name="SheetExportLabel" class="subsection-header"/>
            <ui:DropdownField name="SheetSelection" label="Sheet" class="sheet-dropdown"/>
            <ui:Button name="ExportSheetButton" text="Export Selected Sheet to CSV" class="action-button"/>
        </ui:VisualElement>
        <ui:VisualElement class="section">
            <ui:Label text="Copy All Text" class="subsection-header"/>
            <ui:DropdownField name="LanguageSelection" label="Language" class="language-dropdown"/>
            <ui:VisualElement class="button-column">
                <ui:Button name="CopyAllTextButton" text="Copy All Text" class="action-button"/>
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
